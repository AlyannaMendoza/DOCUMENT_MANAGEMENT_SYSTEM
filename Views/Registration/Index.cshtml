@model DMS_v2.Models.RegistrationIndexViewModel

@{
    ViewBag.Title = "Account List";
}
<br/>
<div class="panel panel-primary">
    <div class="panel-heading">
        ACCOUNT LIST
    </div>
    <!-- /.box-header -->
    <div class="panel-body">
        <table class="table table-condensed tablesort table-hover">
            <thead>
                <tr>
                    <th>
                        Full Name
                    </th>
                    <th>
                        User Login
                    </th>
                    <th></th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model.Registrations.Where(i => i.IsActive == true || i.IsActive == false).OrderBy(i => i.LastName))
                {
                    <tr>

                        <td>
                            @item.LastName, @item.FirstName @item.MiddleName
                        </td>
                        <td>
                            @item.UserName
                        </td>

                        <td>
                            <a href="@Url.Action("Details","Registration", new { id = item.Id})" class="btn btn-block btn-primary btn-xs" target="_blank">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/plugins/jQuery/jquery-2.2.3.min.js"></script>

    <!-- DataTables -->
    <script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/plugins/datatables/dataTables.bootstrap.css">
    <script>
                $(function () {

                    $('.tablesort').DataTable({
                        "paging": true,
                        "lengthChange": true,
                        "searching": true,
                        "ordering": true,
                        "aaSorting": [],
                        "info": true,
                        "autoWidth": true
                    });
                });
    </script>
}
