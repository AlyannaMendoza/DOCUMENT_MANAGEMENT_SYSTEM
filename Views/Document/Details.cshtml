@model DMS_v2.Models.Document

@{
    ViewBag.Title = "Details";
}

<br />
<div class="panel panel-primary">

    <div class="panel-heading">
        <h3 class="panel-title text-center">@Model.FileName</h3>
    </div>
    <div class="panel-body">
        <h5 class="card-subtitle text-muted">Uploaded Date: @Model.DateUploaded</h5>
        <h6 class="card-subtitle text-muted">Content Type: @Model.Extension</h6>
        <iframe src="@Url.Action("GetFile", "Document", new { id = Model.Id })" width="100%" height="800px"></iframe>
    </div>

    <div class="form-group">
        <h2>OCR Result</h2>
        @if (ViewBag.OcrResult != null)
        {
            <pre style="width: 100%; height: 100%; white-space: pre-wrap; ">
                @Html.Raw(ViewBag.OcrResult)
            </pre>
        }
        else
        {
            <p>No result available.</p>
        }
        <a href="@Url.Action("Index", "Document")">Back to Document List</a>
    </div>

</div>